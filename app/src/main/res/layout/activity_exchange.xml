<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jjone.icontec.ExchangeActivity">

    <EditText
        android:id="@+id/txtBoxAddMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="30dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/txtBoxAddMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="30dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/txtBoxAddMessage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="30dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonAddMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXCHANGE INFORMATION"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:src="@android:drawable/btn_star" />

    <Button
        android:id="@+id/buttonSendImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toSuccessActivity"
        android:text="Send Card" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="popUpTutorialExchangeInfo"
        android:text="Help" />

</LinearLayout>
